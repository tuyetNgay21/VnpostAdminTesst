@using vnpost.Models.connectDB;
@model List<IsNavbar>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Search/View_LayOut.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Danh Sách Các Ảnh Của Thanh Trượt
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                @{
                    var danhSachThanhtruot = (List<IsNavSinger>)ViewBag.DanhSachNav;
                }
                @if (danhSachThanhtruot == null)
                {
                    <h5>Không có dữ liệu</h5>
                }
                else
                {
                    <table class="table table-sm table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Mã số</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Đã Xóa</th>
                                <th scope="col">Avata</th>
                                <th scope="col">Khởi Tạo</th>
                                <th scope="col">Thêm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ik in danhSachThanhtruot)
                            {
                                <tr>
                                    <th scope="row">@ik.NavbarSingerId</th>
                                    <td>@ik.Title</td>
                                    <td>@ik.LinkImage</td>
                                    <td>@ik.Deleted</td>
                                    <td><img src="@ik.ImageSinger" style="height:50px ; width:50px;" alt="@ik.Title" /></td>
                                    <td><a href="/CaroDauTien?id=@ik.NavbarSingerId">Chọn</a></td>
                                    <td><a href="/ThemThanhPhan?id=@ik.NavbarSingerId">Chọn</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Trạng Thái Hiển Thị
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                @{
                    var caro = (List<IsNavSinger>)ViewBag.maCaroDauTien;
                    int a = 0;
                }
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < caro.Count(); i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="active" style="border-radius:100%; height:10px; width:10px;"></li>

                            }
                            else
                            {
                                <li data-target="#carouselExampleCaptions" data-slide-to="@i" style="border-radius:100%; height:10px; width:10px;"></li>

                            }
                        }
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var ik in caro)
                        {
                            if (a == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="@ik.ImageSinger" class="d-block w-100 " style=" height:400px; width:100%;" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5><a href="@ik.LinkImage">@ik.Title</a></h5>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item ">
                                    <img src="@ik.ImageSinger" class="d-block w-100" style=" height:400px; width:100%;" alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5><a href="@ik.LinkImage">@ik.Title</a></h5>
                                    </div>
                                </div>
                            }
                            a++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Các Mã  Thanh Trượt
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                @{
                    var iht = (List<int?>)ViewBag.chuoiMA;
                }
                @if (iht == null)
                {
                    <h5>Không có dữ liệu</h5>
                }
                else
                {
                    <table class="table table-sm table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Mã số</th>
                                <th scope="col">Chọn Để Chỉnh Sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ik in iht)
                            {
                                <tr>
                                    <th scope="row">@ik</th>
                                    <td><a href="/CaroChon?id=@ik">Chọn</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Các Chỉnh vị trí
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                @{
                    var CNB = (List<IsNavbar>)ViewBag.LayBoDangDung;
                }

                <form role="form" action="ChinhViTri" class="form-horizontal ">
                    @if (CNB == null)
                    {
                        <h5>Không có dữ liệu</h5>
                    }
                    else
                    {
                        foreach (var ikj in CNB)
                        {
                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">Tên Chủ Đề</label>
                                <div class="col-lg-6">
                                    <input asp-for="@ikj.NavbarId" placeholder="" id="f-name" class="form-control" readonly="readonly">
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">Tên Chủ Đề</label>
                                <div class="col-lg-6">
                                    <input asp-for="@ikj.Stt" placeholder="" id="f-name" class="form-control" readonly="readonly">

                                </div>
                            </div>
                        }

                    }
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-6">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>

            </div>
        </section>
    </div>
</div>
@section name{
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

}
