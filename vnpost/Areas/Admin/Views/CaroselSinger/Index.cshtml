@using vnpost.Models.connectDB;
@model IsNavSinger
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Search/View_LayOut.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Thêm Một Chủ Đề Mới
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                <div class="panel-body">
                    <div class="col-sm-7">
                        <input class="form-control" id="fileUpLoadImgNav" type="file" name="file" style="display:none;" />
                    </div>
                    <br />
                    <button type="submit" id="BtnUpLoadFileImgNav" class="btn btn-success">Tải ảnh Lên</button>
                </div>
                <div class="text-center">
                    <img src="@Model.ImageSinger" id="ImgUpLoadShowUserView" style="width:100%; height:12em; margin-bottom:1em;" class="rounded" alt="...">
                </div>
                <form role="form" class="form-horizontal ">
                    <div class="form-group has-success">
                        <label asp-for="Title" class="col-lg-3 control-label">Tiêu đề</label>
                        <div class="col-lg-6">
                            <input asp-for="Title" placeholder="" id="f-name" class="form-control">
                            <span asp-validation-for="Title" class="help-block"></span>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ImageSinger" class="col-lg-3 control-label">Ảnh</label>
                        <div class="col-lg-6">
                            <input asp-for="ImageSinger" placeholder="" id="f-name" class="form-control AnhChuDeAddLen" readonly="readonly">
                            <span asp-validation-for="ImageSinger" class="help-block"></span>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="LinkImage" class="col-lg-3 control-label">Đường Dẫn</label>
                        <div class="col-lg-6">
                            <input asp-for="LinkImage" placeholder="" id="f-name" class="form-control">
                            <span asp-validation-for="LinkImage" class="help-block"></span>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Deleted" class="col-lg-3 control-label">Trạng Thái Xóa</label>
                        <div class="col-lg-6">
                            <input asp-for="Deleted" placeholder="" id="f-name" class="form-control">
                            <span asp-validation-for="Deleted" class="help-block"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-6">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
@{
    var Listtheme = (List<IsNavSinger>)ViewBag.AllTheme;
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Xem ảnh thanh trượt đơn đã có
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                @if (Listtheme == null)
                {
                    <h5>Không có dữ liệu</h5>
                }
                else
                {
                    <table class="table table-sm table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Mã</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col">Ngày update</th>
                                <th scope="col">Ngày xóa</th>
                                <th scope="col">Đã Xóa</th>
                                <th scope="col">Link</th>
                                <th scope="col">ảnh</th>
                                <th scope="col">Sửa</th>
                                <th scope="col">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ik in Listtheme)
                            {
                            <tr>
                                <th scope="row">@ik.NavbarSingerId</th>
                                <td>@ik.Title</td>
                                <td>@ik.DateCreate</td>
                                <td>@ik.DateUpdate</td>
                                <td>@ik.DateDelete</td>
                                <td>@ik.Deleted</td>
                                <td>@ik.LinkImage</td>
                                <td><img src="@ik.ImageSinger" style="height:50px ; width:50px;" alt="@ik.Title" /></td>
                                <td><a href="/CaroselSinger?id=@ik.NavbarSingerId">Sửa</a></td>
                                <td><a href="/DeleteNavAdmin?id=@ik.NavbarSingerId">Xóa</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </section>
    </div>
</div>



